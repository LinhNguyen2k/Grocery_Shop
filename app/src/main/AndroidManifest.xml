<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grocery_shop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Grocery_Shop">
        <activity
            android:name=".view.activity.admin.AccountActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.admin.EditProductActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.admin.ViewAllOrderActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.admin.UploadProductActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.admin.ManageProductActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.admin.AdminHomeActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.client.SetNewPassWordActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.client.ForGotPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.client.EditProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.client.SignUpActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.client.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                android:screenOrientation="portrait"
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.client.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.client.HomeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>