<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="BottomNavigationTextInactivate">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    <style name="BottomNavigationTextActivate">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="RatingBarLarge" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>

    </style>

    <!--EditText Style-->
    <style name="EditTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="EditTextSingleLine" parent="EditTextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/gray_50</item>
        <item name="android:background">@drawable/bg_rounded_white</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="paddingEnd">@dimen/spacing_small</item>
    </style>

    <!--Button Style-->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="cornerRadius">@dimen/border_round</item>
    </style>

    <style name="ButtonWithIcon" parent="ButtonStyle">
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/icon_size_small</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ButtonText" parent="ButtonStyle">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ButtonTrans" parent="ButtonStyle">
    </style>

    <!--Text Style-->
    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleUploadVideo" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <!--TextTitle-->
    <style name="TextTitle" parent="TextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleLarge" parent="TextTitle">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextTitleMedium" parent="TextTitle">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextTitleNormal" parent="TextTitle">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextTitleSmall" parent="TextTitle">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!--TextContent-->
    <style name="TextContent" parent="TextStyle">
    </style>

    <style name="TextButton" parent="TextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_medium</item>

    </style>

    <style name="TextContentLarge" parent="TextContent">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextContentMedium" parent="TextContent">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextContentNormal" parent="TextContent">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextContentSmall" parent="TextContent">
        <item name="android:textSize">@dimen/font_small</item>
    </style>



    <style name="dialog_transparent_width" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="animation_show_dialog">
        <item name="android:windowEnterAnimation">@anim/animate_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_fade_exit</item>
    </style>

    <style name="DMSLiteLinearInforDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_2sdp</item>
        <item name="android:layout_marginRight">@dimen/_2sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="DMSLiteSpinnerSearchV2">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_height">@dimen/_26sdp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>
