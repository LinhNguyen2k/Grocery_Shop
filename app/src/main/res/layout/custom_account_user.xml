<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_item"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:background="@color/COLOR_GRAY_BG"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginStart="@dimen/_8sdp"
                android:id="@+id/img_user"
                android:src="@drawable/logo_market"
                android:layout_width="@dimen/_75sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="@dimen/_75sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_nameUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:text="Nguyễn Anh Linh"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintLeft_toRightOf="@id/img_user"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/beausanspro_bold"/>
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintLeft_toRightOf="@id/img_user"
                app:layout_constraintTop_toBottomOf="@+id/tv_nameUser"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/beausanspro_bold"/>
            <TextView
                android:id="@+id/tv_phoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintLeft_toRightOf="@id/img_user"
                app:layout_constraintTop_toBottomOf="@+id/tv_email"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/beausanspro_bold"/>
            <TextView
                android:id="@+id/tv_dateOfBirthDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintLeft_toRightOf="@id/img_user"
                app:layout_constraintTop_toBottomOf="@+id/tv_phoneNumber"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/beausanspro_bold"/>
            <TextView
                android:id="@+id/tv_role"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintLeft_toRightOf="@id/img_user"
                app:layout_constraintTop_toBottomOf="@+id/tv_dateOfBirthDay"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/beausanspro_bold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</LinearLayout>