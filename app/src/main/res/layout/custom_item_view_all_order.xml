<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_item"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:background="@color/COLOR_GRAY_BG"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border">

            <ImageView
                android:layout_marginStart="@dimen/_8sdp"
                android:id="@+id/img_item"
                android:src="@drawable/logo_market"
                android:layout_width="@dimen/_75sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="@dimen/_75sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_name_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintLeft_toRightOf="@id/img_item"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/beausanspro_bold"/>
            <TextView
                android:id="@+id/tv_nameOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:text="Nguyễn Anh Linh"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintLeft_toRightOf="@id/img_item"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_product"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/beausanspro_bold"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintLeft_toRightOf="@id/img_item"
                app:layout_constraintTop_toBottomOf="@+id/tv_nameOrder"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/beausanspro_bold"/>
            <TextView
                android:id="@+id/tv_phoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintLeft_toRightOf="@id/img_item"
                app:layout_constraintTop_toBottomOf="@+id/tv_address"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/beausanspro_bold"/>
<!--            <TextView-->
<!--                android:id="@+id/tv_quantity"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="@dimen/_11sdp"-->
<!--                android:layout_marginTop="@dimen/_5sdp"-->
<!--                android:layout_marginLeft="@dimen/_20sdp"-->
<!--                android:maxLines="1"-->
<!--                android:ellipsize="end"-->
<!--                android:layout_marginEnd="@dimen/_5sdp"-->
<!--                app:layout_constraintLeft_toRightOf="@id/img_item"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/tv_phoneNumber"-->
<!--                app:layout_constraintRight_toRightOf="parent"-->
<!--                android:fontFamily="@font/beausanspro_bold"/>-->
            <TextView
                android:id="@+id/tv_dateOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintLeft_toRightOf="@id/img_item"
                app:layout_constraintTop_toBottomOf="@+id/tv_phoneNumber"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/beausanspro_bold"/>
            <TextView
                android:id="@+id/tv_sumMoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintLeft_toRightOf="@id/img_item"
                app:layout_constraintTop_toBottomOf="@+id/tv_dateOrder"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/beausanspro_bold"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_addDelete"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="Xóa"
                android:layout_marginStart="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/beausanspro_semibold"
                android:background="@drawable/background_button_save"
                app:layout_constraintTop_toBottomOf="@+id/tv_sumMoney"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img_item"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</LinearLayout>