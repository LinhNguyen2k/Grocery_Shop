<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_item"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:background="@color/COLOR_GRAY_BG"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border">

            <ImageView
                android:layout_marginStart="@dimen/_8sdp"
                android:id="@+id/img_item"
                android:layout_width="@dimen/_75sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="@dimen/_75sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView

                android:id="@+id/tv_name_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintLeft_toRightOf="@id/img_item"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/beausanspro_bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:text="Sửa"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_30sdp"
                android:fontFamily="@font/beausanspro_semibold"
                app:layout_constraintHorizontal_bias="0.6"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_button_pay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img_item"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_addDelete"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:text="Xóa"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/beausanspro_semibold"
                android:background="@drawable/background_button_save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btn_edit"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</LinearLayout>