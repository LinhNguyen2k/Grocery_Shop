<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_item"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:background="@color/COLOR_GRAY_BG"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border">

            <ImageView
                android:layout_marginStart="@dimen/_8sdp"
                android:id="@+id/img_item"
                android:layout_width="@dimen/_75sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="@dimen/_75sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_name_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintLeft_toRightOf="@id/img_item"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iv_deleteProduct"
                android:fontFamily="@font/beausanspro_bold"/>
            <TextView
                android:id="@+id/tv_priceProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toRightOf="@id/img_item"
                app:layout_constraintTop_toBottomOf="@id/tv_name_product"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:fontFamily="@font/beausanspro_regular"
                android:textColor="@color/COLOR_PROGRESS"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_subtraction"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="-"
                android:fontFamily="@font/beausanspro_semibold"
                app:layout_constraintHorizontal_bias="0.6"
                android:background="@color/TRANSPARENT"
                app:layout_constraintTop_toBottomOf="@+id/tv_priceProduct"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img_item"/>
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="0"
                android:fontFamily="@font/beausanspro_semibold"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/tv_priceProduct"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_subtraction"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_addCart"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="+"
                android:fontFamily="@font/beausanspro_semibold"
                android:background="@color/TRANSPARENT"
                app:layout_constraintTop_toBottomOf="@+id/tv_priceProduct"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_result"/>

            <ImageView
                android:id="@+id/iv_deleteProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/_10sdp"/>
            <ImageView
                android:id="@+id/iv_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_coin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/tv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành tiền: "
                android:textSize="10sp"
                android:fontFamily="@font/beausanspro_semibold"
                android:textColor="@color/COLOR_GRAY19"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintLeft_toRightOf="@id/iv_coin"
                android:layout_marginBottom="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/tv_resultMoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:maxLines="1"
                android:fontFamily="@font/beausanspro_semibold"
                android:ellipsize="end"
                android:textColor="@color/COLOR_PROGRESS"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintLeft_toRightOf="@id/tv_test"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</LinearLayout>