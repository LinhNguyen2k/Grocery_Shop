<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.SellFragment">

    <RelativeLayout
        android:background="@color/COLOR_GRAY_BG"
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_thongBao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/_150sdp">

            <TextView
                android:id="@+id/tv_thongBao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#039887"
                android:textSize="@dimen/_10sdp"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RC_list_sp_car"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_mid"
            android:layout_marginTop="@dimen/_20sdp" />
        <RelativeLayout
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:id="@+id/layout_mid"
            android:layout_above="@+id/bt_Refund"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tổng Tiền:"
                android:textColor="#00796B"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:textColor="#FF0303"
                android:id="@+id/sum_price_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_Refund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Thanh Toán"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/beausanspro_semibold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:background="@drawable/background_button_pay" />
    </RelativeLayout>
</LinearLayout>