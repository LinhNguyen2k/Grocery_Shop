    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layoutUserInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatarUser"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/avata" />

        <ImageView
            android:id="@+id/imgChooseImg"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_118sdp"
            android:layout_toRightOf="@id/imgAvatarUser"
            android:src="@drawable/ic_baseline_edit_24" />

        <EditText
            android:id="@+id/edtUsernameInfor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgAvatarUser"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:focusable="false"
            android:fontFamily="@font/beausanspro_bold"
            android:inputType="none"
            android:textSize="@dimen/_18sdp"
            tools:ignore="Deprecated" />

<!--        <ImageView-->
<!--            android:id="@+id/btnEdit"-->
<!--            android:layout_width="@dimen/_40sdp"-->
<!--            android:layout_height="@dimen/_40sdp"-->
<!--            android:layout_below="@id/imgAvatarUser"-->
<!--            android:layout_marginLeft="@dimen/_10sdp"-->
<!--            android:layout_toRightOf="@id/edtUsernameInfor"-->
<!--            android:padding="@dimen/_10sdp"-->
<!--            android:src="@drawable/ic_baseline_edit_24" />-->

            <TextView
                android:id="@+id/txtFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtUsernameInfor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/beausanspro_semibold" />
        <TextView
            android:id="@+id/txtEmail"
            android:fontFamily="@font/beausanspro_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@id/txtFullName"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/txtPhone"
            android:fontFamily="@font/beausanspro_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@id/txtEmail"
            android:layout_centerHorizontal="true" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/custom_login_button"
            android:fontFamily="@font/beausanspro_semibold"
            android:text="Log Out"
            android:textAllCaps="false" />

    </RelativeLayout>