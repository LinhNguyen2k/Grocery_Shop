<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_GRAY_BG">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_65sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.grocery_shop.customview.toolbar.ToolBarApp
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawable_start="@drawable/ic_arrow_left"
                app:title="Chỉnh sửa thông tin cá nhân" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_15sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_user_image"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/iv_no_image" />

                    <ImageView
                        android:id="@+id/iv_edit_image"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:src="@drawable/camera" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/beausanspro_semibold"
                android:text="Tên"
                android:textColor="@color/COLOR_GRAY19"
                android:textSize="@dimen/_15sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="@dimen/_5sdp">

                <EditText
                    android:id="@+id/et_real_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:backgroundTint="@color/COLOR_GRAY19"
                    android:fontFamily="@font/beausanspro_semibold"
                    android:gravity="center_vertical"
                    android:hint="Tên đăng nhập"
                    android:inputType="textCapSentences"
                    android:singleLine="true" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/beausanspro_semibold"
                android:text="Họ và tên"
                android:textColor="@color/COLOR_GRAY19"
                android:textSize="@dimen/_15sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="@dimen/_5sdp">

                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:backgroundTint="@color/COLOR_GRAY19"
                    android:fontFamily="@font/beausanspro_semibold"
                    android:hint="Họ và tên"
                    android:inputType="textCapSentences"
                    android:singleLine="true" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/beausanspro_semibold"
                android:text="Email"
                android:textColor="@color/COLOR_GRAY19"
                android:textSize="@dimen/_15sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="@dimen/_5sdp">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:backgroundTint="@color/COLOR_GRAY19"
                    android:fontFamily="@font/beausanspro_semibold"
                    android:hint="Email"
                    android:inputType="textCapSentences"
                    android:singleLine="true" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/beausanspro_semibold"
                android:text="SĐT"
                android:textColor="@color/COLOR_GRAY19"
                android:textSize="@dimen/_15sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="@dimen/_5sdp">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:backgroundTint="@color/COLOR_GRAY19"
                    android:fontFamily="@font/beausanspro_semibold"
                    android:hint="Sđt"
                    android:inputType="textCapSentences"
                    android:singleLine="true" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/beausanspro_semibold"
                android:text="Ngày sinh"
                android:textColor="@color/COLOR_GRAY19"
                android:textSize="@dimen/_15sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="@dimen/_5sdp">

                <EditText
                    android:id="@+id/et_dateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:backgroundTint="@color/COLOR_GRAY19"
                    android:fontFamily="@font/beausanspro_semibold"
                    android:hint="Ngày sinh"
                    android:inputType="textCapSentences"
                    android:singleLine="true" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/layout_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/background_button_pay"
        android:fontFamily="@font/beausanspro_bold"
        android:gravity="center"
        android:text="Lưu"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold" />


</RelativeLayout>
